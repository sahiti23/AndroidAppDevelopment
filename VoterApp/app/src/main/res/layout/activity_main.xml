<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.voterapp.MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:src="@drawable/uofu" />

        <TextView
            android:id="@+id/tv_uofu_count"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>

        <Button
            android:id="@+id/btn_u_vote"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="VOTE"
            android:layout_margin="8dp"
            android:onClick="voteU"

            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:src="@drawable/usu" />

        <TextView
            android:id="@+id/tv_usu_count"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>

        <Button
            android:id="@+id/btn_usu_vote"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="VOTE"
            android:layout_margin="8dp"
            android:onClick="voteUsu"
            />


    </LinearLayout>
</LinearLayout>